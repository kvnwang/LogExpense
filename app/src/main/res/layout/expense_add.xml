<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Enter An Expense Entry:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/descriptiontitle"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/buttonSave"
        android:layout_alignStart="@+id/buttonSave"
        android:layout_below="@+id/title"
        android:layout_marginTop="21dp"
        android:text="Enter Description:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/descriptioninput"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descriptiontitle"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notetitle"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/descriptioninput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Enter Note:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/noteinput"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notetitle"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/buttonCancel"
        android:layout_alignStart="@+id/buttonCancel"
        android:layout_below="@+id/noteinput"
        android:layout_marginTop="27dp"
        android:onClick="saveEntry"
        android:text="Save"
        android:textSize="20sp" />


    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttonSave"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="cancelEntry"
        android:text="Cancel"
        android:textSize="20sp" />
</RelativeLayout>